= form_for(@pilot, :url => url, :html => { :method => method, :class=> "form"}) do |f|
  - if @pilot.errors.any?
    .alert.alert-error
      - @pilot.errors.full_messages.each do |msg|
        = msg
        %br
  %div
    = f.label :name
    = f.text_field :name, :class => "span6"
    %br
    = f.label :country_id
    = f.select :country_id, Country.all.map{ |c| [c.name, c.id] }

    %br
    = f.submit submit, :class => "btn"
